{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23
  },
  "configurePresets": [
    {
      "hidden": true,
      "name": "default",
      "generator": "Ninja",
      "installDir": "${sourceDir}/install",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreadedDLL",
        "SIGNATURE_BUILD_BENCHMARKS": true,
        "SIGNATURE_BUILD_TESTS": true,
        "SIGNATURE_BUILD_MAIN": true
      }
    },
    {
      "name": "msvc-debug",
      "displayName": "MSVC Debug",
      "binaryDir": "${sourceDir}/build/msvc/debug",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "msvc-release",
      "displayName": "MSVC Release",
      "binaryDir": "${sourceDir}/build/msvc/release",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "llvm-debug",
      "displayName": "LLVM Debug",
      "binaryDir": "${sourceDir}/build/llvm/debug",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_COMPILER": "clang-cl"
      }
    },
    {
      "name": "llvm-release",
      "displayName": "LLVM Release",
      "binaryDir": "${sourceDir}/build/llvm/release",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_COMPILER": "clang-cl"
      }
    },
    {
      "name": "install",
      "displayName": "Install",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/install",
      "installDir": "${sourceDir}/install",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreadedDLL"
      }
    }
  ]
}
